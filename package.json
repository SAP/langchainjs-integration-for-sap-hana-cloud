{
  "name": "@sap/hana-langchain",
  "version": "0.1.0",
  "description": "Integrates LangChain.js with SAP HANA Cloud to make use of vector search, knowledge graph, and further in-database capabilities as part of LLM-driven applications.",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:SAP/langchainjs-integration-for-sap-hana-cloud.git"
  },
  "homepage": "https://github.com/SAP/langchainjs-integration-for-sap-hana-cloud",
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "lint:eslint": "NODE_OPTIONS=--max-old-space-size=4096 eslint --cache --ext .ts,.js src/",
    "lint:dpdm": "dpdm --exit-code circular:1 --no-warning --no-tree src/*.ts src/**/*.ts",
    "lint": "yarn lint:eslint && yarn lint:dpdm",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:dpdm",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --testPathIgnorePatterns=\\.int\\.test.ts --testTimeout 30000 --maxWorkers=50%",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch --testPathIgnorePatterns=\\.int\\.test.ts",
    "test:single": "NODE_OPTIONS=--experimental-vm-modules yarn run jest --config jest.config.cjs --testTimeout 100000",
    "test:int": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPatterns=\\.int\\.test.ts --testTimeout 100000 --maxWorkers=50%",
    "format": "prettier --config .prettierrc --write \"src\"",
    "format:check": "prettier --config .prettierrc --check \"src\""
  },
  "author": "LangChain",
  "license": "MIT",
  "dependencies": {
    "@sap/hana-client": "^2.25.31",
    "@types/n3": "^1.26.0",
    "n3": "^1.26.0",
    "sparqljs": "^3.7.3"
  },
  "peerDependencies": {
    "@langchain/core": "^0.3.78",
    "langchain": "^0.3.36"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@jest/globals": "^30.2.0",
    "@langchain/core": "0.3.78",
    "@langchain/scripts": ">=0.1.0 <0.2.0",
    "@swc/core": "^1.3.90",
    "@swc/jest": "^0.2.29",
    "@tsconfig/recommended": "^1.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/sparqljs": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "dedent": "^1.7.0",
    "dotenv": "^17.2.3",
    "dpdm": "^3.12.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-no-instanceof": "^1.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "langchain": "^0.3.36",
    "prettier": "^3.6.2",
    "rdf-isomorphic": "^2.0.1",
    "rollup": "^4.5.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.47.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts",
        "default": "./dist/index.d.ts"
      },
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/"
  ]
}
